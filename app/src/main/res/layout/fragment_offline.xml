<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="org.librucha.lamer.OfflineActivity$PlaceholderFragment">

	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/sync_button_label"
			android:id="@+id/button"
			android:layout_alignParentBottom="true"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="@dimen/activity_vertical_padding"
			android:onClick="startDownloading"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="@string/quotes_count_label"
			android:id="@+id/qoutesCountLabel"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"
			android:layout_marginTop="@dimen/activity_vertical_padding"
			android:singleLine="true"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="@string/quotes_size_label"
			android:id="@+id/quotesSizeLabel"
			android:layout_below="@+id/qoutesCountLabel"
			android:layout_alignParentStart="true"
			android:layout_marginTop="@dimen/activity_vertical_margin"
			android:singleLine="true"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="37000"
			android:id="@+id/quotesCountValue"
			android:layout_above="@+id/quotesSizeLabel"
			android:layout_alignParentEnd="true"
			android:singleLine="true"
			android:textColor="@android:color/holo_blue_light"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="325 MB"
			android:id="@+id/quotesSizeValue"
			android:layout_alignBottom="@+id/quotesSizeLabel"
			android:layout_alignParentEnd="true"
			android:textColor="@android:color/holo_blue_light"/>
</RelativeLayout>
